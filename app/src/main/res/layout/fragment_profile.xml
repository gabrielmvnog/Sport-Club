<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.gfsportclub.sportclub.ProfileFragment"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageButton
                android:id="@+id/profile_setup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@android:color/transparent"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:src="@drawable/ic_action_name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/profilePicure"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/profileUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="21sp" />

                    <TextView
                        android:id="@+id/profile_friends_counter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:text="0" />


                    <TextView
                        android:id="@+id/profile_friends_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Amigos" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:layout_margin="1dp"
        android:orientation="vertical">

    </View>



    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <GridLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:rowCount="5"
            android:columnCount="2">


            <TextView
                android:layout_gravity="right"
                android:text="Data de nascimento: "
                android:textColor="#9E9E9E"
                android:textStyle="bold"
                android:paddingRight="5dp"/>


            <TextView
                android:layout_gravity="left"
                android:textColor="#000000"
                android:paddingRight="5dp"
                android:id="@+id/profile_data"/>

            <TextView
                android:text="Gênero: "
                android:layout_gravity="right"
                android:textStyle="bold"
                android:textColor="#9E9E9E"
                android:paddingTop="10dp"
                android:paddingRight="5dp" />


            <TextView
                android:layout_gravity="left"
                android:paddingTop="10dp"
                android:textColor="#000000"
                android:paddingRight="5dp"
                android:id="@+id/profile_gen"/>

            <TextView

                android:text="Categoria: "
                android:layout_gravity="right"
                android:textStyle="bold"
                android:textColor="#9E9E9E"
                android:paddingTop="10dp"
                android:paddingRight="5dp"/>

            <TextView
                android:layout_gravity="left"
                android:paddingTop="10dp"
                android:textColor="#000000"
                android:paddingRight="5dp"
                android:id="@+id/profile_cat"/>


        </GridLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Interesses: "
                android:layout_gravity="right"
                android:textColor="#9E9E9E"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:paddingRight="5dp"/>


            <TextView
                android:id="@+id/interresesProfile"
                android:text=""
                android:layout_gravity="left"
                android:textColor="#000000"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:inputType="textMultiLine"
                android:singleLine="false" />

        </GridLayout>



    </LinearLayout>

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:layout_margin="1dp"
        android:orientation="vertical">

    </View>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sugestão de amizades: "
        android:layout_marginLeft="10dp"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/suggest_friends">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>
